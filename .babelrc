{
	"presets": [
        "@babel/preset-env",
        "@babel/preset-react"
    ],
	"plugins": ["@babel/plugin-syntax-dynamic-import", "@babel/plugin-proposal-class-properties"],
    "root": true,
    "builtins": "usage",
    "modules": "auto",
    "exclude": [
		"node_modules",
		"Docs"
	  ],
      "env": {
        "development": {
            "presets": ["env", "react"],
            "debug": true,
            "highlightCode": true,
            "sourceMaps": true,
            "comments": true,
            "compact": false,
            "minified": false,
            "codeFrame": true,
            "auxiliaryCommentBefore": "true",
            "parser": "babel-eslint",
            "parserOptions": {
                "ecmaVersion": 2018,
                "sourceType": "module",
                "ecmaFeatures": {
                    "jsx": true,
                    "experimentalObjectRestSpread": true,
                    "experimentalDecorators": true,
                    "legacyDecorators": true
                }
            }
            }
                },
        "target": {
            "es6": true,
            "node": ">= 10.0.0 || <=16.0.0",
            "browsers": ["last 2 versions", "ie >= 11"],
            "esmodules": true,
            "react": true,
        }
    }
