{
    "env": {
        "browser": true,
		"es2020": true,
        "node": true
	},
	/* "globals": {
		"":"off"
	}, */
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": [
		"react",
		"import",
		"jsx-a11y",
		"prettier"
	],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:import/errors",
		"plugin:jsx-a11y/recommended",
		"plugin:prettier/recommended"
	],
	"ignorePatterns": [
		"node_modules/"
	],
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "modules": true,
		  "version": "latest",
		  "es6": true
        },
        "sourceType": "module",
        "react": {
          "version": "detect"
        }
    },
    "rules":
    {
	  "react/react-in-jsx-scope": "off",
      "import/no-anonymous-default-export": "off",
      "lines-around-comment":"off",
      "no-inline-comments":"off",
	  "no-confusing-arrow": [
			"warn",
			{
				"allowParens": false
			}
		],
      "no-tabs": ["off", {"allowIndentationTabs": true}],
	  "curly":"warn",
	  "multiline-ternary":"off",
	  "no-unexpected-multiline":"warn",
	  "no-extra-semi":"off",
	  "no-mixed-spaces-and-tabs": "off",
		"no-restricted-syntax": [
			"error",
			"SequenceExpression"
		]

	}
}
