{
    "env": {
        "browser": true,
		"es2020": true,
        "node": true
},
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": [
		"react",
		"import",
		"jsx-a11y",
		"prettier"
	],
	"extends": [
		"eslint:recommended",
		// "plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
		// "plugin:prettier/recommended"
	],
	"ignorePatterns": [
		"node_modules/"
	],
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
        //   "modules": true,
		  "version": "latest",
		  "es6": true
        },
        "sourceType": "module",
        "react": {
          "version": "latest"
        }
    },
    "rules":
    {
	  "react/react-in-jsx-scope": "off",
      "import/no-anonymous-default-export": "off",
    //   "lines-around-comment":"off",
    //   "no-inline-comments":"off",
      "no-tabs": ["off", {"allowIndentationTabs": true}]
	}
}
